<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h2>{{ puesto.title }}</h2>
    <button class="btn btn-danger" id="btn-delete" data-id="{{puesto.uniqueId}}">
      <i class="fa fa-times"></i> Delete
    </button>
  </div>
  <div class="card-body">
    <h3>{{puesto.empresa}}</h3>
  </div>
  <div class="card-body">
    <p>{{ puesto.description }}</p>
    <div class="text-center">
      <img src="/public/upload/{{puesto.filename}}" class="img-fluid">
    </div>
  </div>
  <div class="card-footer d-flex justify-content-between align-items-center">
    <button class="btn btn-success" id="btn-like" data-id="{{puesto.filename}}">
      <i class="fas fa-thumbs-up"></i> Like
    </button>
    <p>
      <span class="likes-count">{{puesto.likes}}</span>
      <i class="fas fa-heart"></i>
    </p>
    
    <p>
      <i class="fas fa-eye"></i> {{puesto.views}}
    </p>
    <p>
      <i class="far fa-clock"></i>
      {{puesto.timestamp}}
    </p>
  </div>
</div>